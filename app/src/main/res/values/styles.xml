<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TextView">
        <item name="android:layout_height">@dimen/navigation_drawer_item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    <style name="TextView.Title" parent="TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/navigation_drawer_title_height</item>
        <item name="android:background">@color/blue_light</item>
        <item name="android:textSize">@dimen/navigation_drawer_title_textsize</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
