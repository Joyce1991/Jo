<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:dividerHeight="0dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".NavigationDrawerFragment" >
    <TextView
        style="@style/TextView.Title"
        android:text="欢迎使用"/>
    <FrameLayout
        android:id="@+id/fl_drawer_userinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--用户已登录-->
        <LinearLayout
            android:id="@+id/ll_drawer_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:padding="8dp">
            <com.jalen.jo.views.CircleImageView
                android:id="@+id/iv_drawer_usericon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                app:border_width="2dp"
                app:border_color="@color/white"
                android:src="@drawable/tulips"/>
            <TextView
                android:id="@+id/tv_drawer_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="张晋瑜"/>
            </LinearLayout>
        <!--用户未登录-->
        <LinearLayout
            android:id="@+id/ll_drawer_unsignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您还未登录,请"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_drawer_signin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="，"/>
                <TextView
                    android:id="@+id/tv_drawer_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_bg"
                    android:text="注册"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    <!--图书馆选择-->
    <TextView
        style="@style/TextView.Title"
        android:text="图书馆"/>

    <Spinner
        android:id="@+id/spinner_library_select"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_drawer_item_height"
        android:paddingLeft="16dp"
        android:spinnerMode="dropdown" />
    <!--我的借阅-->
    <TextView
        style="@style/TextView.Title"
        android:text="我的借阅"/>
    <TextView
        android:id="@+id/tv_drawer_borrowhistory"
        style="@style/TextView"
        android:text="借阅历史"/>
    <TextView
        style="@style/TextView"
        android:text="正在阅读"/>


</LinearLayout>
