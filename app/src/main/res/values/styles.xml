    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_colorPrimary</item>
        <item name="colorPrimaryDark">@color/main_colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/textcolor_primary</item>
        <item name="android:navigationBarColor">@color/navigationbar_color</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
    <!--自定义actionbar样式-->
    <style name="JoActionBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>
    <!--书架界面的主题风格-->
    <style name="BookshelfTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="actionBarStyle">@style/JoActionBarStyle</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/blue_indigo</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/blue_indigo_dark</item>
        <!-- colorAccent is used as the default value for colorControlActivated,
         which is used to tint widgets -->
        <item name="colorAccent">@color/color_accent</item>
    </style>
    <!--账户界面的主题风格-->
    <style name="AccountTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="actionBarStyle">@style/JoActionBarStyle</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/blue_indigo</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/blue_indigo_dark</item>
        <!-- colorAccent is used as the default value for colorControlActivated,
         which is used to tint widgets -->
        <item name="colorAccent">@color/color_accent</item>
    </style>
    <!--登录注册页的风格-->
    <style name="SigninAndUpTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="actionBarStyle">@style/JoActionBarStyle</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/signinandup_colorPrimary</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/signinandup_colorPrimaryDark</item>
        <!-- colorAccent is used as the default value for colorControlActivated,
         which is used to tint widgets -->
        <item name="colorAccent">@color/color_accent</item>
    </style>
    <!--textview样式-->
    <style name="TextView">
        <item name="android:layout_height">@dimen/navigation_drawer_item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    <style name="TextView.Title" parent="TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/navigation_drawer_title_height</item>
        <item name="android:background">@color/blue_light</item>
        <item name="android:textSize">@dimen/navigation_drawer_title_textsize</item>
        <item name="android:gravity">center</item>
    </style>
    <!--部件通用样式-->
    <style name="JoComponentStyle">
        <!--宽高设置-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/jocomponent_layout_height</item>
        <!--margin设置-->
        <item name="android:layout_marginTop">@dimen/jocomponent_layout_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/jocomponent_layout_marginBottom</item>
        <!--padding设置-->
        <item name="android:paddingLeft">@dimen/jocomponent_paddingLeft</item>
        <item name="android:paddingRight">@dimen/jocomponent_paddingRight</item>
    </style>
    <!--修改自动补充输入框的风格为EditText-->
    <style name="AutoCompleteTextView2EditText" parent="Base.Widget.AppCompat.EditText">
        <!--宽高设置-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/jocomponent_layout_height</item>
        <!--margin设置-->
        <item name="android:layout_marginTop">@dimen/jocomponent_layout_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/jocomponent_layout_marginBottom</item>
    </style>
    <!--Button通用样式-->
    <style name="JoComponentStyle.Button" parent="JoComponentStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/jocomponent_textsize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_bg</item>
    </style>
    <style name="JoComponentStyle.TextView" parent="JoComponentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/jocomponent_textsize</item>
        <item name="android:layout_margin">@dimen/jocomponent_layout_margin</item>
    </style>

    <!-- CaptureActivity theme. -->
    <style name="CaptureActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/CaptureActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_remove</item>
        <item name="android:actionBarSize">48dp</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/CaptureActionBarStyle</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="homeAsUpIndicator">@drawable/ic_action_remove</item>
        <item name="actionBarSize">48dp</item>

    </style>
    <!--CaptureActivity.ActionBarStyle-->
    <style name="CaptureActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_capture_bg</item>
        <item name="android:actionBarDivider">@drawable/actionbar_capture_divider</item>
        <item name="android:showDividers">middle</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_capture_bg</item>
        <item name="actionBarDivider">@drawable/actionbar_capture_divider</item>
        <item name="showDividers">middle</item>

    </style>


    <!--textView 文本选择或者按下时的效果-->
    <style name="textStyle_selected_pressed">
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textStyle_default">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!--textview about-->
    <style name="LinkText">
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
    </style>
</resources>
